    /* <![CDATA[ */
    jQuery(document).ready(function ($) {
        $("#ex1").popover({
            trigger: 'click'
        });
        $("#ex2").popover({
            title: "Hello",
            content: "Finally, I can speak!" + $("
        });
    });
